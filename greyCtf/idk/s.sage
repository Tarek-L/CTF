def load_sigmas(filename):
    lines = [line.strip() for line in open(filename) if line.strip()]
    F_hex = lines[0]
    sigmas = []
    for line in lines[1:]:
        if line in ["0", "OK"]:
            break
        try:
            sigmas.append(int(line, 16))
        except:
            break
    return F_hex, sigmas

